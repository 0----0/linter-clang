{
  "name": "linter-clang",
  "main": "./lib/main",
  "version": "3.0.0",
  "description": "Lint C-based files using clang",
  "repository": {
    "type": "git",
    "url": "https://github.com/AtomLinter/linter-clang"
  },
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "providedServices": {
